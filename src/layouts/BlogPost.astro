---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import ShareButtons from '../components/ShareButtons.astro';
import TableOfContents from '../components/TableOfContents.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, category } = Astro.props;
const shareUrl = Astro.url.href;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main>
			<div class="post-layout">
				<article>
					{heroImage && (
						<div class="hero-image">
							<Image width={1020} height={510} src={heroImage} alt={title} />
						</div>
					)}
					<div class="prose">
						<header class="post-header">
							<div class="post-meta">
								<a href={`/blog/category/${category}/`} class="category-badge">{category}</a>
								<FormattedDate date={pubDate} />
								{updatedDate && (
									<span class="updated">
										Â· Updated <FormattedDate date={updatedDate} />
									</span>
								)}
							</div>
							<h1>{title}</h1>
							{description && <p class="description">{description}</p>}
						</header>
						<ShareButtons url={shareUrl} title={title} />
						<div class="content">
							<slot />
						</div>
						<ShareButtons url={shareUrl} title={title} />
					</div>
				</article>
				<aside class="toc-sidebar">
					<TableOfContents />
				</aside>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 1100px;
	}

	.post-layout {
		display: grid;
		grid-template-columns: minmax(0, 1fr) 200px;
		gap: 40px;
		align-items: start;
	}

	article {
		padding-top: 20px;
		max-width: 800px;
		overflow: hidden;
	}

	.toc-sidebar {
		padding-top: 20px;
	}

	@media (max-width: 1100px) {
		.post-layout {
			grid-template-columns: 1fr;
		}

		.toc-sidebar {
			display: none;
		}
	}

	.hero-image {
		margin-bottom: 40px;
	}

	.hero-image img {
		width: 100%;
		height: auto;
		border-radius: 16px;
		box-shadow: var(--box-shadow);
	}

	.prose {
		max-width: 720px;
		margin: 0 auto;
	}

	.post-header {
		margin-bottom: 48px;
		padding-bottom: 32px;
		border-bottom: 1px solid var(--border-color);
	}

	.post-meta {
		font-size: 0.9rem;
		color: var(--accent-light);
		margin-bottom: 16px;
		display: flex;
		align-items: center;
		gap: 12px;
	}

	.category-badge {
		font-family: 'JetBrains Mono', monospace;
		font-size: 0.75rem;
		font-weight: 500;
		color: var(--accent-light);
		background: rgba(99, 102, 241, 0.1);
		border: 1px solid rgba(99, 102, 241, 0.2);
		padding: 3px 10px;
		border-radius: 6px;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.category-badge:hover {
		background: rgba(99, 102, 241, 0.2);
		border-color: var(--accent);
	}

	.updated {
		color: var(--text-secondary);
	}

	.post-header h1 {
		font-size: 2.5rem;
		line-height: 1.2;
		margin-bottom: 16px;
		color: var(--text-primary);
	}

	.description {
		font-size: 1.25rem;
		color: var(--text-secondary);
		margin: 0;
		line-height: 1.6;
	}

	.content {
		font-size: 1.0625rem;
		line-height: 1.8;
	}

	.content :global(h2) {
		font-size: 1.75rem;
		margin-top: 48px;
		margin-bottom: 16px;
		color: var(--text-primary);
	}

	.content :global(h3) {
		font-size: 1.25rem;
		margin-top: 32px;
		margin-bottom: 12px;
		color: var(--text-primary);
	}

	.content :global(p) {
		margin-bottom: 24px;
		color: var(--text-secondary);
	}

	.content :global(a) {
		color: var(--accent-light);
		text-decoration: underline;
		text-underline-offset: 3px;
	}

	.content :global(a:hover) {
		color: var(--accent);
	}

	.content :global(ul),
	.content :global(ol) {
		margin-bottom: 24px;
		padding-left: 24px;
	}

	.content :global(li) {
		margin-bottom: 8px;
		color: var(--text-secondary);
	}

	.content :global(blockquote) {
		margin: 32px 0;
		padding: 16px 24px;
		background: var(--bg-card);
		border-left: 4px solid var(--accent);
		border-radius: 0 12px 12px 0;
	}

	.content :global(blockquote p) {
		margin: 0;
		color: var(--text-primary);
		font-style: italic;
	}

	.content :global(pre) {
		margin: 32px 0;
		padding: 24px;
		background: var(--bg-card);
		border: 1px solid var(--border-color);
		border-radius: 12px;
		overflow-x: auto;
	}

	.content :global(code) {
		font-family: 'JetBrains Mono', monospace;
		font-size: 0.9em;
	}

	.content :global(img) {
		margin: 32px 0;
		border-radius: 12px;
	}

	@media (max-width: 720px) {
		.post-header h1 {
			font-size: 1.5rem;
		}

		.description {
			font-size: 1rem;
		}

		.prose {
			max-width: 100%;
		}

		.content :global(pre) {
			padding: 16px;
			font-size: 0.8rem;
		}

		.content :global(table) {
			display: block;
			overflow-x: auto;
			-webkit-overflow-scrolling: touch;
			font-size: 0.85rem;
		}
	}
</style>
