---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About | ${SITE_TITLE}`} description="About m96-chan" />
	</head>
	<body>
		<Header />
		<main>
			<article class="about">
				<header>
					<h1>About <span class="gradient-text">Me</span></h1>
				</header>
				<div class="content">
					<p>
						Welcome to my blog! I'm a developer passionate about creating things with code.
					</p>
					<p>
						This blog is where I share my thoughts, tutorials, and insights on development.
						Feel free to explore and reach out if you have any questions.
					</p>

					<h2>Connect</h2>
					<ul class="links">
						<li>
							<a href="https://www.m96-chan.dev" target="_blank">Main Site</a>
						</li>
						<li>
							<a href="https://github.com/m96-chan" target="_blank">GitHub</a>
						</li>
					</ul>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	.about {
		max-width: 720px;
		margin: 0 auto;
	}

	header {
		margin-bottom: 48px;
		padding-bottom: 32px;
		border-bottom: 1px solid var(--border-color);
	}

	header h1 {
		font-size: 3rem;
		margin: 0;
	}

	.gradient-text {
		background: var(--gradient-1);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.content {
		font-size: 1.0625rem;
		line-height: 1.8;
	}

	.content p {
		color: var(--text-secondary);
		margin-bottom: 24px;
	}

	.content h2 {
		font-size: 1.5rem;
		margin-top: 48px;
		margin-bottom: 16px;
		color: var(--text-primary);
	}

	.links {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.links li {
		margin-bottom: 12px;
	}

	.links a {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		color: var(--accent-light);
		font-size: 1rem;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.links a:hover {
		color: var(--accent);
	}

	@media (max-width: 720px) {
		header h1 {
			font-size: 2.5rem;
		}
	}
</style>
